<div class="container-fluid">
	<div class="row new-ticket-container">
		<h2 class="sub-header">New ticket</h2>

		<form id="new-ticket">
			<div class="form-group title-group">
				<label for="title">Title</label>
				<input type="text" class="form-control" id="title" placeholder="Title">
				<p class="bg-danger error-message"></p>
			</div>
			<div class="form-group content-group">
				<label for="content">Content</label>
				<textarea name="content" class="form-control" id="content" cols="30" rows="10" placeholder="Content"></textarea>
				<p class="bg-danger error-message"></p>
			</div>
			<button type="submit"  class="create-ticket btn btn-primary">Create Ticket</button>
		</form>
	</div>
</div>
